---
import Layout from "@layouts/Default.astro";
import RecentBlogPosts from "@components/generic/RecentBlogPosts.astro";
import MobileSocials from "@components/home/MobileSocials.astro";
import { Pill } from "@eliancodes/brutal-ui";
import { Button } from "@eliancodes/brutal-ui";
import { Card } from "@eliancodes/brutal-ui";

const techStack = [
  { name: "Java", url: "/career/" },
  { name: "Spring/Spring Boot", url: "/career/" },
  { name: "C#/.NET", url: "/career/" },
  { name: "SQL", url: "/career/" },
];

const compInfraList = [
  { name: "Networking", url: "/career/" },
  { name: "Cloud computing", url: "/career/" },
  { name: "Observability", url: "/career/" },
  { name: "Application security", url: "/career/" },
  { name: "OSINT", url: "/career/" },
];

const likes = [
  { name: "Reading", url: "https://www.goodreads.com/biancatuliao" },
  { name: "Playing violin", url: "/blog/" },
  { name: "Discovering new restaurants", url: "https://www.yelp.com/user_local_photos?userid=qo4UhWXcrY4Ysy64GkcbRA" },
  { name: "Watching eSports", url: "/blog/" },
  { name: "Walking along nature trails", url: "https://www.flickr.com/photos/biancatuliao/" },
  { name: "Crocheting and other fiber art", url: "/blog/" },
];

const learnings = [
  { name: "Cooking Filipino food", url: "/blog/" },
  { name: "Rock climbing", url: "/blog/" },
];
---

<Layout
  title="Home"
  pageTitle="Bianca Tuliao |Â Home"
  description="The blog of Bianca Tuliao"
>
  <main class="bg-pink p-6">
    <MobileSocials />
    <section id="about" class="grid md:grid-cols-8 gap-8 mt-4">
      <h2 class="hidden">About Bianca</h2>
      <div class="flex flex-col md:col-span-6">
        <Card>
          <div class="flex flex-col justify-between items-start gap-4">
            <p class="mt-4 outfit text-2xl md:text-5xl lg:text-6xl">
              Bridging gaps between worlds:
            </p>
            <p class="mt-2 outfit text-xl md:text-3xl lg:text-5xl">
              digital & human, city & scenery, design & performance.
            </p>
            <p class="mt-2 outfit text-xl md:text-3xl lg:text-3xl">
              Software engineer based in Philadelphia.
            </p>
            <p class="mt-2 outfit text-xl md:text-3xl lg:text-3xl">
              Originally from the 'burbs of Chicago.
            </p>
            <Button target={"_self"} href="/career/">
              My experience &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <img
        src="/bianca.png"
        class="object-cover h-full w-full rounded-lg md:col-span-2 border-3 border-black card-shadow"
        alt="Bianca typing on a laptop"
        width="392"
        height="392"
        loading="lazy"
        decoding="async"
      />
    </section>
    <section class="mt-8 grid md:grid-cols-2 gap-8">
      <div class="flex flex-col gap-8">
        <Card>
          <h2 class="text-2xl md:text-4xl lg:text-6xl mb-5 dm-serif">
            Interests
          </h2>
          <p class="text-2xl md:text-2xl lg:text-2xl mb-4 dm-serif">
            Application development
          </p>
          <ul class="flex gap-4 flex-wrap">
            {
              techStack.map((item) => (
                <li>
                  <Pill>
                    <a
                      class="sanchez"
                      href={item.url}
                      target="_blank"
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
          <br />
          <p class="text-2xl md:text-2xl lg:text-2xl mb-4 dm-serif">
            Computer infrastructure and security
          </p>
          <ul class="flex gap-4 flex-wrap">
            {
              compInfraList.map((item) => (
                <li>
                  <Pill>
                    <a
                      class="sanchez"
                      href={item.url}
                      target="_blank"
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <div class="flex flex-col gap-8">
        <Card>
          <h2 class="text-2xl md:text-4xl lg:text-6xl mb-5 dm-serif">Enjoys</h2>
          <ul class="flex gap-4 flex-wrap">
            {
              likes.map((item) => (
                <li>
                  <Pill>
                    <a
                      class="sanchez"
                      href={item.url}
                      target="_blank"
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
          <br />
          <p class="text-2xl md:text-2xl lg:text-4xl mb-4 dm-serif">
            Learning
          </p>
          <ul class="flex gap-4 flex-wrap">
            {
              learnings.map((item) => (
                <li>
                  <Pill>
                    <a
                      class="sanchez"
                      href={item.url}
                      target="_blank"
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>